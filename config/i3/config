# Config
font pango:DejaVu Sans Mono 8
floating_modifier Mod4
new_window 1pixel
gaps inner 10


# Keybinds
## Navigation
bindsym Mod4+Return exec --no-startup-id "i3-sensible-terminal"
bindsym Mod4+Shift+q kill
bindsym Mod4+d exec --no-startup-id "rofi -combi-modi window,drun,ssh -show combi"
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right
bindsym Mod4+b split h
bindsym Mod4+v split v
bindsym Mod4+f fullscreen toggle
bindsym Mod4+s layout stacking
bindsym Mod4+w layout tabbed
bindsym Mod4+e layout toggle split
bindsym Mod4+Shift+space floating toggle
bindsym Mod4+space focus mode_toggle
bindsym Mod4+a focus parent
bindsym Mod4+Shift+c reload
bindsym Mod4+Shift+r restart
bindsym Mod4+r mode "resize"


## Workspaces
bindsym Mod4+1 workspace 1
bindsym Mod4+2 workspace 2
bindsym Mod4+3 workspace 3
bindsym Mod4+4 workspace 4
bindsym Mod4+5 workspace 5
bindsym Mod4+6 workspace 6
bindsym Mod4+7 workspace 7
bindsym Mod4+8 workspace 8
bindsym Mod4+9 workspace 9
bindsym Mod4+10 workspace 10


## Shortcuts
bindsym Print exec --no-startup-id flameshot gui
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse sset Master toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym Mod4+x exec --no-startup-id ~/.emacs.d/bin/org-capture
bindsym Mod4+p exec --no-startup-id i3-lock-fancy


# Autostart
exec --no-startup-id xinput set-prop 'DELL0829:00 06CB:7E92 Touchpad' 'libinput Tapping Enabled' 1
exec --no-startup-id setxkbmap -option caps:swapescape
exec --no-startup-id compton --config ~/.config/i3/compton.conf -b
exec --no-startup-id dunst
exec --no-startup-id xset +fp ~/.fonts
exec --no-startup-id xset fp rehash
exec_always --no-startup-id feh --bg-max --randomize ~/Pictures/Wallpapers* &
exec_always ~/.dotfiles/xrandr/apply.sh ~/.dotfiles/xrandr/layouts/
exec --no-startup-id flameshot
exec --no-startup-id nm-applet
exec --no-startup-id tint2


# Window settings
for_window [instance="^org-capture$"] floating enable


# Extra
#Resize mode
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
